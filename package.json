{
  "name": "droptalk",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "turbo start",
    "build": "turbo build",
    "dev": "turbo dev",
    "server:dev": "turbo dev --filter=server... --no-cache",
    "server:build": "turbo build --filter=server",
    "server:typecheck": "turbo typecheck --filter=server",
    "web:dev": "turbo dev --filter=web... --no-cache",
    "web:build": "turbo build --filter=web",
    "web:typecheck": "turbo typecheck --filter=web",
    "clean": "turbo clean",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "kill-port": "^2.0.1",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "turbo": "^2.8.9"
  },
  "engines": {
    "node": ">=20.6.0"
  },
  "packageManager": "yarn@4.5.3"
}
