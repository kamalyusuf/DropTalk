    "consola": "^3.4.2",
    "cors": "^2.8.6",
    "envalid": "^8.1.1",
    "express": "^5.2.1",
    "express-list-routes": "^1.3.2",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "mediasoup": "^3.19.17",
    "nanoid": "^5.1.6",
    "node-cron": "^4.2.1",
    "socket.io": "^4.8.3",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
